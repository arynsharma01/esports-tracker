generator client {
  provider        = "prisma-client-js"
  engineType      = "library"  // Change this to library or binary
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Team{
  id  String @id @default(uuid())
  name String @unique 
  description String ? 
  Players Player[] 
  image String 
}
model Player{
  id String @id @default(uuid())
  name String
  surname String?
  ign String 
  role String @default("assaulter")
  handler String? 

  autor Team @relation(fields: [authorid],references: [id])
  authorid String
}
